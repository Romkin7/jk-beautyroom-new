<section>
    <div class="container">
        <div class="row my-5 d-flex justify-content-center">
            <div class="col-md-6">
                 {{#each content}}
                {{#if this.title}}
                <h1>Muokkaa {{this.title}} kuvaa</h1>
                {{/if}}
                {{/each}}
            </div>
        </div>
        <div class="row my-3 d-flex justify-content-center">
            <div class="col-md-6">
                {{#each contentm}}
                {{#if this._id}}
                <form action="/admin/contents/{{this._id}}?_method=PUT" method="POST"  enctype="multipart/form-data">
                {{/if}}
                {{/each}}
                    <div class="form-group">
                        <label for="category" class="form-label">Sivu *</label>
                        <select name="category" id="category"
                            class="form-control" required>
                            <option value="">Valitse Sivu</option>
                            {{#each pageCategories}}
                            <option value={{this.value}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="title" class="form-label">Otsikko *</label>
                        <input type="text" id="title" name="title"
                            class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="image" class="form-label">Kuva *</label>
                        <input type="file" id="image" name="image" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="summernote" class="form-label">Sisältö *</label>
                        <textarea class="form-control" name="body"
                            id="summernote" required></textarea>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Luo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>