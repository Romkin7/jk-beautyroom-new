<section>
    <div class="container">
        <div class="row my-5 d-flex justify-content-center">
            <div class="col-md-12">
                <h1>Hallitse sisältöä</h1>
            </div>
        </div>
        <div class="row my-3 d-flex justify-content-center">
            {{#each contents}}
            <div class="col-md-12">
                {{#each this}}
                {{#if this.title}}
                <h2>{{this.title}}</h2>
                <div>{{{this.body}}}</div>
                <div class="col-md-4 galleryItem">
                    <picture class="galleryItem--picture">
                        <img class="galleryItem--picture__img"
                            src="{{this.src}}"
                            alt="{{this.alt}}"
                            loading="lazy" />
                    </picture>
                    <p class="galleryItem--description">{{this.alt}}</p>
                </div>
                <div class="d-flex">
                    <a class="btn btn-warning"
                        href="/admin/contents/{{this._id}}">Muokkaa</a>
                    <a class="btn btn-warning"
                        href="/admin/contents/{{this._id}}/editimage">Muokkaa
                        kuvaa</a>
                    <form class="mx-3"
                        action="/admin/contents/{{this._id}}?_method=DELETE"
                        method="POST"><button type="submit" class="btn
                            btn-danger">Poista</button></form>
                </div>
                {{/if}}
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div>
</section>