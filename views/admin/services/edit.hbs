<section>
    <div class="container">
        <div class="row mt-5 d-flex justify-content-center align-center">
            <div class="col-sm-12 col-md-6">
                {{#each service}}
                {{#if this.name}}
                <h1>Muokkaa {{this.name}} palvelua</h1>
                {{/if}}
                {{/each}}
            </div>
        </div>
        <div class="row mt-3 d-flex justify-content-center align-center">
            <div class="col-sm-12 col-md-6">
                {{#each service}}
                {{#if this._id}}
                <form action="/admin/services/{{this._id}}?_method=PUT"
                    method="POST">
                    {{/if}}
                    {{/each}}
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="category">Palvelun Kategoria *</label>
                                    <select name="category" id="category"
                                        class="form-control" required>
                                        {{#each service}}
                                        {{#if this.category}}
                                        <option value="{{this.category}}">{{this.category}}</option>
                                        {{/if}}
                                        {{/each}}
                                        {{#each serviceCategories}}
                                        <option value={{this.value}}>{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                {{#each service}}
                                {{#if this.name}}
                                <div class="form-group">
                                    <label class="form-label" for="name">Palvelun
                                        nimi *</label>
                                    <input class="form-control" type="text"
                                        name="name" id="name"
                                        value="{{this.name}}" required />
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="price">Palvelun
                                        hinta *</label>
                                    <input class="form-control"
                                        inputmode="numeric" type="number"
                                        name="price" id="price"
                                        value="{{this.price}}" required />
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="secondPrice">Kalliimpi
                                        hinta (Optional)</label>
                                    <input class="form-control"
                                        inputmode="numeric" type="number"
                                        name="secondPrice" id="secondPrice"
                                        value="{{this.secondPrice}}" />
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="additional">Lis√§tieto
                                        (Optional)</label>
                                    <input class="form-control" type="text"
                                        name="additional" id="additional"
                                        value="{{this.additional}}" />
                                </div>
                                {{/if}}
                                {{/each}}
                                <div class="form-check mt-3">
                                    <input class="form-check-input"
                                        name="hourlyPrice"
                                        type="checkbox" id="hourlyPrice" />
                                    <label class="form-check-label"
                                        for="hourlyPrice">
                                        Tuntihinta
                                    </label>
                                </div>
                                <div class="form-group mt-3">
                                    <button type="submit" class="btn
                                        btn-success">Muokkaa</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>