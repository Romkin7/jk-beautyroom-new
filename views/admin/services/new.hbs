<section>
    <div class="container">
        <div class="row mt-5 d-flex justify-content-center align-center">
            <div class="col-sm-12 col-md-6">
                <h1>Luo Palvelu</h1>
            </div>
        </div>
        <div class="row mt-3 d-flex justify-content-center align-center">
            <div class="col-sm-12 col-md-6">
                <form action="/admin/services" method="POST">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="category">Palvelun Kategoria *</label>
                                    <select name="category" id="category"
                                        class="form-control" required>
                                        <option value="">Valitse kategoria</option>
                                        {{#each serviceCategories}}
                                        <option value={{this.value}}>{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="name">Palvelun
                                        nimi *</label>
                                    <input class="form-control" type="text"
                                        name="name" id="name" required />
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="price">Palvelun
                                        hinta *</label>
                                    <input class="form-control" inputmode="numeric" type="number"
                                        name="price" id="price" required />
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="secondPrice">Kalliimpi
                                        hinta (Optional)</label>
                                    <input class="form-control" inputmode="numeric" type="number"
                                        name="secondPrice" id="secondPrice" />
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="additional">Lis√§tieto (Optional)</label>
                                    <input class="form-control" type="text"
                                        name="additional" id="additional" />
                                </div>
                                <div class="form-check mt-3">
                                    <input class="form-check-input" name="hourlyPrice"
                                        type="checkbox" id="hourlyPrice">
                                    <label class="form-check-label"
                                        for="hourlyPrice">
                                        Tuntihinta
                                    </label>
                                </div>
                                <div class="form-group mt-3">
                                    <button type="submit" class="btn
                                        btn-success">Luo</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>